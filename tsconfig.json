{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@backend/*": ["backend/src/*"],
      "@frontend/*": ["frontend/web/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
} 